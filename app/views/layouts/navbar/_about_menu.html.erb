<% if Seek::Config.about_page_enabled || !Seek::Config.about_link.blank?  || !Seek::Config.cite_link.blank?  || !Seek::Config.contact_link.blank? %>
  <li id="navbar_about" class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
      <span class="hidden-md">About</span>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <% if Seek::Config.about_page_enabled %>
        <li><%= link_to "About #{Seek::Config.project_name}", about_home_path -%></li>
      <% end %>
      <% if !Seek::Config.about_link.blank? %>
        <li><%= link_to "About #{Seek::Config.project_name}", Seek::Config.about_link, :target => '_blank' -%></li>
      <% end %>
      <% if !Seek::Config.cite_link.blank? %>
        <li><%= link_to "Cite us", Seek::Config.cite_link, :target => '_blank' -%></li>
      <% end %>
      <% if !Seek::Config.contact_link.blank? %>
        <li><%= link_to "Contact us", Seek::Config.contact_link, :target => '_blank' -%></li>
      <% end %>
    </ul>
  </li>
<% end %>
